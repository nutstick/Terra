{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "cd packages/react-terra && yarn start",
    "build": "cd packages/react-terra && yarn build",
    "changelog": "lerna-changelog"
  },
  "devDependencies": {
    "@types/node": "^11.9.4",
    "husky": "^1.3.1",
    "lerna": "^3.13.0",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css,html}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  }
}
